@model IEnumerable<BangazonWorkforce.Models.TrainingProgram>

    @{
        ViewData["Title"] = "Index";
    }

    <h1>Upcoming Training Programs</h1>

    <p>
        <a asp-action="Create">Create New Program</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaxAttendees)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaxAttendees)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div><a asp-area="" asp-controller="TrainingPrograms" asp-action="Past">View Past Programs</a></div>
